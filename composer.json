{
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mozilla-l10n/phpclass-cache"
        }
    ],

    "require": {
        "atoum/atoum" : "~1.1",
        "debach/php-typography" : "dev-master",
        "monolog/monolog" : "~1.1",
        "mozillal10n/cache": "~0.1",
        "pascalc/tinyl10n" : "~0.1",
        "symfony/var-dumper": "~2.1",
        "fabpot/php-cs-fixer": "~1.4",
        "bit3/git-php": "~1",
        "satooshi/php-coveralls": "dev-master"
    },

    "autoload": {
        "psr-0": {
            "Typolib": "app/classes/Typolib/",
            "Transvision": "app/classes/Transvision/"
        }
    }
}
